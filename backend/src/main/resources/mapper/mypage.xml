<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.kpop.dao.MyDao">
	<select id="showMyCommunity" parameterType="String" resultType="CommunityDto">
		select *
		from community
		where uid = #{uid} and is_delete = 0	
	</select>
	
	<select id="showMySinger" parameterType="String" resultType="SingerDto">
		select * 
		from singer 
		where singer_id in (
			select singer_id 
			from singerlike 
			where uid=#{uid}
		)
	</select>
</mapper>